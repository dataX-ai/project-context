# Project Context MCP Server Configuration

# Data directories
DATA_DIR=./data
VECTOR_STORE_PATH=./data/vector_store
GRAPH_FILE=./data/knowledge_graph.pkl
METADATA_DB=./data/contexts.db

# Embedding model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Similarity thresholds
DUPLICATE_THRESHOLD=0.8
SIMILARITY_THRESHOLD=0.6

# Auto-categorization
CATEGORY_CONFIDENCE_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO 

# Neo4j Graph Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# Azure OpenAI Configuration  
AZURE_OPENAI_ENDPOINT=https://<deployment>.<url>.com/
AZURE_OPENAI_API_KEY=<subscription-key>
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1-nano
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=gpt-4.1-nano

# Azure OpenAI Configuration - Embedding Model (text-embedding-ada-002)
AZURE_OPENAI_EMBEDDING_ENDPOINT=https://<deployment>.<url>.com/
AZURE_OPENAI_EMBEDDING_API_KEY=<subscription-key>
AZURE_OPENAI_EMBEDDING_API_VERSION=2023-05-15
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002